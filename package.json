{
 "name": "micro_users",
 "version": "1.0.0",
 "main": "index.js",
 "license": "MIT",
 "dependencies": {
  "boom": "^5.2.0",
  "good": "^7.2.0",
  "good-console": "^6.4.0",
  "good-squeeze": "^5.0.2",
  "hapi": "^16.5.2",
  "joi": "^10.6.0",
  "laabr": "^2.2.3",
  "neo4j-driver": "^1.4.0"
 },
 "scripts": {
  "build": "babel src -d build",
  "dev": "nodemon --exec babel-node ./src/index.js",
  "docker:dev": "docker-compose -f docker-compose/development.yml up",
  "docker:test": "docker-compose -f docker-compose/test.yml up",
  "babel-node": "babel-node --presets=['env', 'es2017']",
  "debug": "nodemon  --exec babel-node --presets=[env,es2017] src/index.js",
  "prod": "npm run build && node ./build/index.js",
  "test": "ava",
  "test:watch": "ava --watch",
  "delete:containers": "docker rm $(docker ps -a -q)",
  "delete:images": "docker rmi $(docker images -a -q)"
 },
 "devDependencies": {
  "ava": "^0.22.0",
  "babel-cli": "^6.24.1",
  "babel-preset-env": "^1.6.0",
  "babel-preset-es2017": "^6.24.1",
  "babel-register": "^6.24.1",
  "nodemon": "^1.11.0",
  "supertest": "^3.0.0"
 },
 "ava": {
  "files": [
   "tests/**/*.test.js"
  ],
  "source": [
   "**/*.{js,jsx}",
   "!build/**/*"
  ],
  "concurrency": 5,
  "failFast": true,
  "failWithoutAssertions": false,
  "require": [
   "babel-register"
  ]
 }
}
